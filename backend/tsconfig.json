{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // Khuyên dùng cho dự án Node hiện đại
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // Rất quan trọng để import Morgan, Compression
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
